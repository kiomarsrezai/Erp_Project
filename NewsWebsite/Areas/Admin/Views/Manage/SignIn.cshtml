@model NewsWebsite.ViewModels.Manage.SignInViewModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">
    <title>ورود به سامانه ERP</title>
    <!-- Favicon -->
    <link href="../assets/img/brand/favicon.png" rel="icon" type="image/png">
    <!-- Icons -->
    <link href="~/assets/vendor/nucleo/css/nucleo.css" rel="stylesheet">
    <link href="~/assets/vendor/fontawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
    <!-- Argon CSS -->
    <link type="text/css" href="~/assets/css/argon.css?v=1.0.0" rel="stylesheet">

    <link type="text/css" href="/assets/css/custom.css" rel="stylesheet">

    <link type="text/css" href="/assets/css/signin.css" rel="stylesheet" />
    @*<script src='https://www.google.com/recaptcha/api.js?hl=fa'></script>*@
</head>

<body class="bg-default">
    <div class="main-content">
        <div class="row no-gutters">

            <!-- login card -->
            <div class="col-3 h-100vh">

                <div class="card bg-secondary shadow h-100 rounded-0">


                    <div class="card-body px-lg-5 py-lg-3 h-100">
                        <div class="d-flex flex-column h-100">
                            <div class="text-center">
                                <img src="/assets/img/logo-fava2.svg" width="150" />
                            </div>
                            <div class="flex flex-column h-100">
                                <form class="d-flex flex-column justify-content-center h-100" asp-action="SignIn">
                                    @if (ViewData.ModelState.IsValid.ToString() == "False")
                                    {
                                        <div asp-validation-summary="All" class="mb-2 alert alert-danger">
                                        </div>
                                    }

                                    <h2 class="text-center mb-3 font-weight-bold">ورود به ERP</h2>

                                    <div class="form-group mb-2">
                                        <div class="input-group input-group-alternative">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                            </div>
                                            <input class="form-control" placeholder="نام کاربری" type="text" asp-for="UserName">
                                        </div>
                                    </div>
                                    <div class="form-group mb-2">
                                        <div class="input-group input-group-alternative">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                            </div>
                                            <input class="form-control" placeholder="کلمه عبور" type="password" asp-for="Password">
                                        </div>
                                    </div>

                                    <div class="custom-control custom-control-alternative custom-checkbox mb-3">
                                        <input class="custom-control-input" id=" customCheckLogin" type="checkbox">
                                        <label class="custom-control-label" for=" customCheckLogin" asp-for="RememberMe"></label>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary w-100 rounded mb-2">ورود به سایت</button>

                                        <a href="#" class="fs-sm text-muted">فراموشی کلمه عبور؟</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>


            <!-- site content -->
            <div class="signin-images col-9 d-flex justify-content-center align-items-center">
                <div class="card p-4 signin-card-content">
                    <div class="card-body">
                        <h1 class="text-white mb-1 h2 font-weight-bold">
                            <small class="pl-2">
                                <i class="fa fa-phone"></i>
                            </small>                            ارتباط با فاوا
                        </h1>
                        <p class="text-justify fs-normal mb-3">
                            شماره تلفن مرکز پاسخگویی به سوالات
                            چهارشنبه 20 مرداد 1400
                            همکاران محترم می توانند با شماره تلفن 32103570 با کارشناسان سازمان فاوا تماس حاصل نمایند.
                        </p>
                        <ul class="list-style-nont p-0">
                            <li class="fs-normal list-style-check">salam</li>
                            <li class="fs-normal list-style-check">salam</li>
                            <li class="fs-normal list-style-check">salam</li>
                            <li class="fs-normal list-style-check">salam</li>
                            <li class="fs-normal list-style-check">salam</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="../assets/vendor/jquery/dist/jquery.min.js"></script>
    <script src="../assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Argon JS -->
    <script src="../assets/js/argon.js?v=1.0.0"></script>
</body>

</html>