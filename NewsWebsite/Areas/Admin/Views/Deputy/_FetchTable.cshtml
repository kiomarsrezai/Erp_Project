    function operateFormatter(value, row, index) {
        var access = "";
        //access = access + '<button type="button" class="btn-link text-success" data-toggle="ajax-modal" data-url=@Url.Action("Details", "Deputy")?Id=' + row.Id + ' title="مناطق"><i class="fa fa-edit"></i></button >';
        access = access + '<a onclick="Details('+row.Id+')" class="btn btn-primary btn-icon"><i class="fa fa-list text-white"></i></a>';
        return access;
    }

    function percentFormatter(value, row, index) {
        return [
            '<div class="progress" <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="' + row.PercentCurrent+'" aria-valuemin="0" aria-valuemax="100"></div>',
            '</div >'
        ].join('')
    }


     function checkBoxFormat(value, row) {
       return '<input type="checkbox" name="btSelectItem" value="' + row.Id + '" />';
    }

        function totalTextFormatter(data) {
            return 'تعداد'
        }

        function totalNameFormatter(data) {
            return data.length
        }


        function initTable() {
            $table.bootstrapTable('destroy').bootstrapTable({
                border:1,
                height: 1000,
                with:1100,
