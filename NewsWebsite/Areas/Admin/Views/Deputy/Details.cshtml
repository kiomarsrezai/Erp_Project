@using NewsWebsite.ViewModels.Api.Report;
@model List<AreaProctorViewModel>
@{
    ViewData["Title"] = "Details";
    Layout = null;
}
<style>
    .modal-dialog {
        max-width: 80% !important;
    }
    .tr, td,th {
        text-align:center;
        border: 1px solid black;
        border-collapse: collapse;
    }
    .tableFixHead {
        overflow: auto;
        height: 100px;
    }

        .tableFixHead thead th {
            position: sticky;
            top: 0;
            z-index: 1;
        }
</style>
<div class="row">
    <div class="col-md-12">
        <table class="tableFixHead" style="border: 1px solid black; border-collapse: collapse; width: 100%;">
            <thead class="bg-gray-high-table">
                <tr style="border: 1px solid black; border-collapse: collapse;">
                    <th rowspan="2">ردیف</th>
                    <th rowspan="2">عنوان</th>
                    <th colspan="3">هزینه ای</th>
                    <th colspan="3">سرمایه ای</th>
                    <th rowspan="2">% جذب کل</th>
                    <th colspan="2"></th>
                </tr>
                <tr>
                    <th class="text-center" width="150px">مصوب</th>
                    <th class="text-center" width="150px">عملکرد</th>
                    <th class="text-center" width="150px">% جذب</th>
                    <th class="text-center" width="150px">مصوب</th>
                    <th class="text-center" width="150px">عملکرد</th>
                    <th class="text-center" width="150px">% جذب</th>
                    <th width="50px"></th>
                    <th width="50px"></th>
                </tr>
            </thead>
            <tbody style="color:black; border: 1px solid black; border-collapse: collapse; width: 100%;">
                @if (Model.Count > 0)
                {
                    int i = 1;
                    foreach (var item in Model)
                    {
                        if (i % 2 == 0)
                        {
                            <tr class="bg-gray-table">
                                <td class="text-center" width="50px">@NewsWebsite.Common.StringExtensions.En2Fa(item.Id.ToString())</td>
                                <td class="text-center" width="200px">@item.AreaName</td>
                                <td class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(item.MosavabCurrent).ToString())</td>
                                <td class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(item.ExpenseCurrent).ToString())</td>
                                <td class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(@item.PercentCurrent.ToString()) %</td>
                                <td class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(item.MosavabCivil).ToString())</td>
                                <td class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(item.ExpenseCivil).ToString())</td>
                                <td class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(@item.PercentCivil.ToString()) %</td>
                                <td class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(@item.PercentTotal.ToString()) %</td>
                                <td width="50px">
                                    <a class="btn btn-link text-primary" data-toggle="ajax-modal" data-url="@Url.Action("FnProctorAreaBudget", "Deputy", new { yId = item.YearId, pId = item.ProctorId, aId = item.AreaId, bId = 2 })">
                                        <i class="fa fa-eye-dropper"></i>
                                    </a>
                                </td>
                                <td width="50px">
                                    <a class="btn btn-link text-primary" data-toggle="ajax-modal" data-url="@Url.Action("FnProctorAreaBudget", "Deputy", new { yId = item.YearId, pId = item.ProctorId, aId = item.AreaId, bId = 3 })">
                                        <i class="fa fa-university"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                        else if (i % 2 != 0)

                        {
                            <tr style="background-color:#ffffff">
                                <td colspan="1" class="text-center" width="50px">@NewsWebsite.Common.StringExtensions.En2Fa(item.Id.ToString())</td>
                                <td colspan="1" class="text-center" width="200px">@item.AreaName</td>
                                <td colspan="1" class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(item.MosavabCurrent).ToString())</td>
                                <td colspan="1" class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(item.ExpenseCurrent).ToString())</td>
                                <td width="150px" class="text-center">@NewsWebsite.Common.StringExtensions.En2Fa(@item.PercentCurrent.ToString()) %</td>
                                <td class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(item.MosavabCivil).ToString())</td>
                                <td class="text-center" width="150px">@NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(item.ExpenseCivil).ToString())</td>
                                <td width="150px" class="text-center">@NewsWebsite.Common.StringExtensions.En2Fa(@item.PercentCivil.ToString()) %</td>
                                <td width="150px" class="text-center">@NewsWebsite.Common.StringExtensions.En2Fa(@item.PercentTotal.ToString()) %</td>
                                <td width="70px">
                                    <a class="btn btn-link text-primary" data-toggle="ajax-modal" data-url="@Url.Action("FnProctorAreaBudget", "Deputy", new { yId = item.YearId, pId = item.ProctorId, aId = item.AreaId, bId = 2 })">
                                        <i class="fa fa-eye-dropper"></i>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-link text-primary" data-toggle="ajax-modal" data-url="@Url.Action("FnProctorAreaBudget", "Deputy", new { yId = item.YearId, pId = item.ProctorId, aId = item.AreaId, bId = 3 })">
                                        <i class="fa fa-university"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;

                        }

                    }
            <tr>
                <td colspan="2">جمع کل</td>
                <td class="text-center">
                    @NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(@Model.Sum(x => x.MosavabCurrent)))
                </td>
                <td class="text-center">
                    @NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(@Model.Sum(x => x.ExpenseCurrent)))
                </td>
                <td></td>
                <td class="text-center">
                    @NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(@Model.Sum(x => x.MosavabCivil)))
                </td>
                <td class="text-center">
                    @NewsWebsite.Common.StringExtensions.En2Fa(NewsWebsite.Common.StringExtensions.ToNumeric(@Model.Sum(x => x.ExpenseCivil)))
                </td>
                <td colspan="3"></td>
            </tr>
                }
                else
                {
                    <tr>
                        <td colspan="10" class="text-center">هیچ ردیفی در جدول وجود ندارد.</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    function FnProctorAreaBudget(_yId, _pId, _aId, _bId)
    {
        $.ajax({
            url: "Deputy/FnProctorAreaBudget",
            data: { yId=_yId, pId=_pId, aId=_aId, bId=_bId },
            type: "get",
        }).done(function (result)
        {
            $("#DetailModal").modal('show');
            $(".modal-title").html('جزئیات اطلاعات ');
            $(".modal-body").html(result);
        });
    }
</script>